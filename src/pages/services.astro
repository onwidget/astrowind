---
import CallToAction from '~/components/widgets/CallToAction.astro';
import Content from '~/components/widgets/Content.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Hero from '~/components/widgets/Hero.astro';
import Testimonials from '~/components/widgets/Testimonials.astro';
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'Services',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    tagline="Services"
    title="Elevate your ad campaigns with our cutting-edge technology"
    subtitle="Explore our innovative solutions tailored to various industries and purposes. From targeted ad placement to optimized CPM pricing, we offer the tools you need to succeed."
    actions={[{ variant: 'primary', target: '_blank', text: 'Start exploring', href: '/' }]}
    image={{
      src: 'https://images.unsplash.com/photo-1519389950473-47ba0277781c?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1740&q=80',
      alt: 'PureStream Hero Image',
    }}
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="Explore our innovative ad solutions"
    subtitle="Discover our selection below to streamline and elevate your ad campaigns."
    columns={3}
    items={[
      {
        title: 'No alternates like us',
        description: `There is no one in the business that compares to our prices and what we deliver.`,
        icon: 'tabler:school',
      },
      {
        title: 'Ads with pin point placement',
        description: 'Our ads target the viewer wherever they may be: home, on their cell, traveling ',
        icon: 'tabler:home-star',
      },
      {
        title: 'Targeted Ad Placement',
        description: `Empowering advertisers, our templates facilitate captivating ad experiences. With a keen focus on layout, galleries, and typography, they cater to both professionals and enthusiasts.`,
        icon: 'tabler:photo',
      },
      {
        title: 'Optimized CPM Pricing',
        description:
          'Developing engaging ad campaigns, our optimized CPM pricing ensures a dynamic presence to effectively reach your target audience. Ideal for startups or revamps.',
        icon: 'tabler:shopping-cart',
      },
      {
        title: 'Advanced Ad Targeting',
        description:
          'Reach your target audience with precision using our advanced ad targeting options, including demographics, interests, and behaviors.',
        icon: 'tabler:target',
      },
      {
        title: 'Real-Time Ad Optimization',
        description:
          'Maximize your ad performance with our real-time ad optimization capabilities, ensuring your ads are always performing at their best.',
        icon: 'tabler:chart-line',
      },
    ]}
  />

  <!-- Content Widget **************** -->

  <Content
  isReversed
  items={[
    {
      title: 'Maximize Ad Impact',
      description:
        'Reach your target audience with precision and drive real results with our cutting-edge ad streaming technology.',
      icon: 'tabler:chart-bar',
    },
    {
      title: 'Streamlined Ad Management',
      description:
        'Effortlessly create, manage, and optimize your ad campaigns with our intuitive platform, designed to save you time and resources.',
      icon: 'tabler:clock',
    },
    {
      title: 'High-Performing Ad Templates',
      description:
        'Get instant access to our library of high-performing ad templates, expertly crafted to drive engagement and conversions.',
      icon: 'tabler:template',
    },
    {
      title: 'Real-Time Ad Analytics',
      description:
        'Make data-driven decisions with our real-time ad analytics, providing you with actionable insights to optimize your ad performance.',
      icon: 'tabler:chart-pie',
    },
  ]}
  image={{
    src: 'src/assets/images/purestream-beach.png',
    alt: 'Features Image',
  }}
>
  <Fragment slot="content">
    <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Discover the Power of PureStream</h3>
  </Fragment>
</Content>

  <!-- Testimonials Widget *********** -->

  <Testimonials
  title="Real viewers, real savings"
  testimonials={[
    {
      testimonial: `I was amazed by how much I could save on my ad spend with PureStream. The cutting-edge technology and targeted ad placement have been a game-changer for my business.`,
      name: 'Emily Kennedy',
      job: 'Advertiser',
      image: {
        src: 'https://images.unsplash.com/photo-1618835962148-cf177563c6c0?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=930&q=80',
        alt: 'Emily Kennedy Image',
      },
    },
    {
      testimonial: `PureStream's innovative ad solutions have helped me reach my target audience more effectively, while also reducing my costs. The results have been incredible!`,
      name: 'Sarah Hansen',
      job: 'Advertiser',
      image: {
        src: 'https://images.unsplash.com/photo-1561406636-b80293969660?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=774&q=80',
        alt: 'Sarah Hansen Image',
      },
    },
    {
      testimonial: `I've been able to save a significant amount of money on my ad campaigns since switching to PureStream. The optimized CPM pricing and targeted ad placement have been a huge win for my business.`,
      name: 'Mark Wilkinson',
      job: 'Advertiser',
      image: {
        src: 'https://images.unsplash.com/photo-1545167622-3a6ac756afa4?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=824&q=80',
        alt: 'Mark Wilkinson Image',
      },
    },
  ]}
  callToAction={{
    target: '_blank',
    text: 'More testimonials...',
    href: 'https://github.com/onwidget/astrowind',
    icon: 'tabler:chevron-right',
  }}
/>

  <!-- CallToAction Widget *********** -->
  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Save on ad spend today',
        href: '/',
      },
    ]}
    title="PureStream Media - Cutting-edge ad solutions"
    subtitle="Reach your target audience at a lower cost"
  />
</Layout>
